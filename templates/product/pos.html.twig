{% extends 'base.html.twig' %}

{% block body %}
<section class="content">
  <div class="container ">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-5 col-lg-5">
        <div class="card">
          <div class="card-body p-0">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th style="width: 10px">id</th>
                  <th>Product</th>
                  <th>Quantity</th>
                  <th>Price</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody id="tablebody">
                <!-- Table rows will be dynamically inserted here -->
              </tbody>
            </table>
          </div>
          <div class="card-footer">
            <div class="row">
              <div class="col-8 col-sm-8 col-md-8 col-lg-8">
                <label for=""><p>Total</p></label>
              </div>
              <div class="col-3 col-sm-3 col-md-3 col-offset-2 col-lg-3">
                <div class="input-group input-group-sm mb-1">
                  <h3 id="total"></h3>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-8 col-sm-8 col-md-8 col-lg-8">
                <label for=""><p>Discount</p></label>
              </div>
              <div class="col-3 col-sm-3 col-md-3 col-offset-2 col-lg-3">
                <div class="input-group" id="remiseinput">
                  <input class="form-control" name="remise" id="remise" type="number" placeholder="Discount" />
                </div>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-8 col-sm-8 col-md-8 col-lg-8">
                <label for=""><p>Final Total</p></label>
              </div>
              <div class="col-3 col-sm-3 col-md-3 col-offset-2 col-lg-3">
                <div class="input-group input-group-sm">
                  <h3 id="newtotal"></h3>
                </div>
              </div>
            </div>
            <div class="text-center">
              <button href="#" class="btn btn-info" id="btnvalider"><i class="fa fa-check"></i> Validate</button>
              <button onClick="window.location.reload();" class="btn btn-danger"><i class="fa fa-trash"></i> Cancel</button>
            </div>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-12 col-md-7 col-lg-7">
        <div class="input-group">
          <br>
          <input type="text" id="searchproduct" class="form-control" placeholder="Search">
        </div>
        <div class="row">
          {% for product in products %}
          <div class="col-6 col-sm-6 col-md-3 col-lg-3 mt-2 productclass productid{{ product.id }}">
            <div class="card p-0 m-0">
              <div class="card-body p-0 m-0 b-0 photo" id="{{ product.id }}">
                <img src="{{ asset('noproduct.jpeg') }}" alt="" class="img-thumbnail">
              </div>
              <div class="title">
                <h2 class="names" id="{{ product.id }}">
                  {{ product.name ?? '' }}
                </h2>
              </div>
              <div class="card-footer cf">
                <div class="row">
                  <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                    <span class="price">
                      <h3>
                        {{ product.salePrice ?? '0' }} DA
                      </h3>
                    </span>
                  </div>
                  <div class="col-6 col-sm-6 col-md-6 col-lg-6 text-right">
                    <a href="#" class="btn btn-primary btnadd" id="{{ product.id ?? '' }}">
                      <i class="fa fa-cart-plus" aria-hidden="true"></i>
                    </a>
                    <a href="#" class="btn btn-danger btnremove" id="{{ product.id ?? '' }}">
                      <i class="fa fa-minus" aria-hidden="true"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
