{# templates/base.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <!-- include your stylesheets and other head content -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Optional custom styles */
        .navbar {
            background-color: #343a40; /* dark background color */
        }
        .navbar-brand {
            color: #ffffff; /* white color for logo text */
            font-size: 1.5rem; /* adjust font size */
            font-weight: bold; /* make it bold */
        }
        .navbar-nav .nav-link {
            color: #ffffff; /* white color for nav links */
        }
    </style>
</head>
<body>
    <div id="app">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <router-link to="/" class="navbar-brand">Your Logo</router-link> <!-- Replace with your logo -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <router-link to="/pos" class="nav-link">Point of Sale</router-link>
                    </li>
                    <li class="nav-item">
                        <router-link to="/sells" class="nav-link">List of Sells</router-link>
                    </li>

                    <!-- Add more navigation items as needed -->
                </ul>
            </div>
        </nav>
        
        <router-view></router-view> <!-- This will render the matched component for the current route -->

    </div>

    <!-- include your scripts at the end of the body -->
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>
